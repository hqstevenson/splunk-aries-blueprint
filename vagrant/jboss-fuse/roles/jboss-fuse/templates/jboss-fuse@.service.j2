[Unit]
Description=JBoss Fuse - %i
After=syslog.target network.target
Requires={{ jboss_fuse_id }}.service

[Service]
EnvironmentFile=-{{ jboss_fuse_home }}/etc/{{ jboss_fuse_id }}-%i.conf
EnvironmentFile=-{{ jboss_fuse_home }}/instances/%i/etc/{{ jboss_fuse_id }}.conf
Environment=KARAF_HOME={{ jboss_fuse_home }}
Environment=KARAF_BASE={{ jboss_fuse_home }}/instances/%i

ExecStart={{ jboss_fuse_home }}/bin/start
ExecStop={{ jboss_fuse_home }}/bin/stop

User={{ jboss_fuse_user }}
Group={{ jboss_fuse_group }}

SuccessExitStatus=0 1 143
RestartSec=15
Restart=on-failure

LimitNOFILE=102642

[Install]
WantedBy=multi-user.target